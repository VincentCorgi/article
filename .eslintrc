// .eslintrc
{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "**/log/**",
    "**/dist/**",
    "**/__test__/**",
    "**/coverage/**",
    "**/node_modules/**"
  ],
  "rules": {
    "semi": "error",
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-var-requires": "error",
    "object-curly-newline": ["error", {
        "ObjectExpression": { "multiline": true, "minProperties": 3 }, // 表達式 object 大於 3 個要多行
        "ObjectPattern": { "multiline": true, "minProperties": 3 }, // 解構 object 大於 3 個要多行
        "ImportDeclaration": "never", // import 要一行
        "ExportDeclaration": { "multiline": true, "minProperties": 3 } // export 大於三個要多行
    }]
  },
  "overrides": [
    {
      "files": [
        "**/cors.ts",
        "**/mongo.ts",
        "**/errorHandler.ts",
        "**/__test__/**",
        "**/requestValidator.ts",
        "**/serverEvent.ts",
        "**/typings/**"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    },
    {
      "files": ["**/errorHandler.ts"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
